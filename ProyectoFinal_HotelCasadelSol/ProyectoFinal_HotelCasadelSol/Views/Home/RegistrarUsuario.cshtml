@model ProyectoFinal_HotelCasadelSol.Entities.UsuariosEnt

@{
    ViewBag.Title = "RegistrarUsuario";
}
<section class="register-details-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="blog-details-text">
                    <div class="leave-comment">
                        <div class="about-text">
                            <div class="section-title">
                                <span>Crear una Cuenta</span>
                            </div>
                        </div>
                        @using (Html.BeginForm("RegistrarUsuario", "Home", FormMethod.Post, new { @class = "comment-form" }))
                        {
                            <div class="col-lg-6 text-center centered">
                                @Html.TextBoxFor(Model => Model.Identificacion, new { @type = "text", @placeholder = "Cédula", @required = "true",
                               @onblur = "ConsultarNombre();"})
                                @Html.TextBoxFor(Model => Model.Nombre, new { @type = "text", @placeholder = "Nombre", @required = "true", @readonly = "readonly" })
                                @Html.TextBoxFor(Model => Model.Apellido, new { @type = "text", @placeholder = "Apellido", @required = "true", @readonly = "readonly" })
                                @Html.TextBoxFor(Model => Model.Telefono, new { @type = "tel", @placeholder = "Telefono (e.g 8888-8888)", @required = "true",
                               @onblur = "ValidarTelefono();"})
                                @Html.TextBoxFor(Model => Model.Edad, new { @type = "number", @placeholder = "Edad", @required = "true",
                               @onblur = "ValidarEdad();"})
                                @Html.TextBoxFor(Model => Model.Correo, new { @type = "email", @placeholder = "Correo Electrónico", @required = "true",
                               @onblur = "ValidarCorreo();"})
                                @Html.TextBoxFor(Model => Model.Contraseña, new { @type = "password", @placeholder = "Contraseña", @required = "true",
                               @onblur = "ValidarConfirmacionContraseña();"})
                                @Html.TextBoxFor(Model => Model.ConfirmarContraseña, new { @type = "password", @placeholder = "Confirmar Contraseña", @required = "true",
                               @onblur = "ValidarConfirmacionContraseña();"})
                                @Html.HiddenFor(Model => Model.Estado, new { Value = "true"})
                                @Html.HiddenFor(Model => Model.UsuarioRol, new { Value = "2"})
                                <button type="submit" id="btnRegistrarme" class="btn site-btn" disabled>¡Registrarme!</button>
                                <div class="about-text-message">
                                    @ViewBag.mensaje
                                </div>
                            </div>
                        }
                    </div>
                 </div>
            </div>
        </div>
    </div>
</section>
<script src="~/FuncionesJS/ValidacionesRegistarUsuario.js"></script>
<script src="~/FuncionesJS/RecuperarNombre.js"></script>